<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:FateRank.ViewModels"
             x:Class="FateRank.Views.MainPage"
             x:DataType="viewmodels:MainViewModel"
             BackgroundColor="#0a3d1d">

    <Grid>
        <ScrollView>
            <Grid RowDefinitions="Auto,Auto,Auto"
                  Padding="20"
                  RowSpacing="20"
                  HorizontalOptions="Center"
                  MaximumWidthRequest="600">

                <!-- COMPUTER -->
                <VerticalStackLayout Grid.Row="0" Spacing="6">

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                        <Label Text="COMPUTER"
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding ComputerScore}"
                               TextColor="#FFD700"
                               FontSize="16"/>
                    </HorizontalStackLayout>

                    <Border Stroke="#FFD700"
                            StrokeThickness="3"
                            StrokeShape="RoundRectangle 15"
                            WidthRequest="{Binding CardWidth}"
                            HeightRequest="{Binding CardHeight}"
                            HorizontalOptions="Center"
                            BackgroundColor="#072a14"
                            Padding="6">

                        <Grid>
                            <Image Source="{Binding ComputerImage}"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Fill"
                                   VerticalOptions="Fill"/>
                        </Grid>

                    </Border>
                </VerticalStackLayout>

                <!-- CENTER -->
                <VerticalStackLayout Grid.Row="1"
                                     Spacing="15"
                                     VerticalOptions="Center">

                    <Label Text="{Binding StatusText}"
                           FontSize="20"
                           TextColor="White"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>

                    <HorizontalStackLayout IsVisible="{Binding IsWarVisible}"
                                           HorizontalOptions="Center">
                        <Frame BackgroundColor="#d90429"
                               BorderColor="#FFD700"
                               CornerRadius="12"
                               Padding="20,8"
                               HasShadow="True">
                            <Label Text="⚔️ WAR ⚔️"
                                   TextColor="White"
                                   FontSize="14"
                                   FontAttributes="Bold"/>
                        </Frame>
                    </HorizontalStackLayout>

                    <Button Text="DEAL"
                            Command="{Binding DealCommand}"
                            IsEnabled="{Binding IsNotBusy}"
                            BackgroundColor="#b30000"
                            TextColor="White"
                            WidthRequest="160"
                            HeightRequest="50"
                            CornerRadius="25"
                            FontSize="18"
                            FontAttributes="Bold"
                            BorderColor="#FFD700"
                            BorderWidth="2">
                        <Button.Shadow>
                            <Shadow Brush="Black"
                                    Offset="2,4"
                                    Opacity="0.6"
                                    Radius="5"/>
                        </Button.Shadow>
                    </Button>
                </VerticalStackLayout>

                <!-- PLAYER -->
                <VerticalStackLayout Grid.Row="2" Spacing="6">

                    <Border Stroke="#FFD700"
                            StrokeThickness="3"
                            StrokeShape="RoundRectangle 15"
                            WidthRequest="{Binding CardWidth}"
                            HeightRequest="{Binding CardHeight}"
                            HorizontalOptions="Center"
                            BackgroundColor="#072a14"
                            Padding="6">

                        <Grid>
                            <Image Source="{Binding PlayerImage}"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Fill"
                                   VerticalOptions="Fill"/>
                        </Grid>

                    </Border>

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                        <Label Text="YOU"
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding PlayerScore}"
                               TextColor="#FFD700"
                               FontSize="16"/>
                    </HorizontalStackLayout>

                </VerticalStackLayout>

            </Grid>
        </ScrollView>

        <!-- GAME OVER OVERLAY -->
        <ContentView IsVisible="{Binding IsGameOver}"
                     BackgroundColor="#CC000000">

            <VerticalStackLayout VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Padding="30">

                <Border Stroke="#FFD700"
                        StrokeThickness="3"
                        StrokeShape="RoundRectangle 20"
                        Padding="40"
                        BackgroundColor="#072a14">

                    <VerticalStackLayout Spacing="20">

                        <Label Text="{Binding StatusText}"
                               TextColor="#FFD700"
                               FontSize="28"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>

                        <Button Text="PLAY AGAIN"
                                Command="{Binding RestartCommand}"
                                BackgroundColor="#FFD700"
                                TextColor="#0a3d1d"
                                WidthRequest="180"
                                HeightRequest="50"
                                CornerRadius="25"
                                FontAttributes="Bold"/>

                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ContentView>
    </Grid>
</ContentPage>
