<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FateRank.ViewModels"
             x:Class="FateRank.Views.MainPage"
             BackgroundColor="#0a3d1d">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid RowDefinitions="*, Auto, *" Padding="20">
            
            <VerticalStackLayout Grid.Row="0">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="15">
                    <Label Text="COMPUTER" TextColor="White" FontSize="20" FontAttributes="Bold" />
                    <Label Text="{Binding ComputerScore}" TextColor="#FFD700" FontSize="20" />
                </HorizontalStackLayout>
                
                <Border Stroke="#FFD700" StrokeThickness="4">
                    <Image Source="{Binding ComputerImage}" Aspect="AspectFit" HeightRequest="185" />
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Row="1" Spacing="20">
                <Label Text="{Binding StatusText}" FontSize="22" TextColor="White" HorizontalOptions="Center" />

                <HorizontalStackLayout IsVisible="{Binding IsWarVisible}" HorizontalOptions="Center">
                    <Frame BackgroundColor="#8b0000" BorderColor="#FFD700" Padding="20,10">
                        <Label Text="⚠️ WAR DETECTED ⚠️" TextColor="White" FontAttributes="Bold" />
                    </Frame>
                </HorizontalStackLayout>

                <Button Text="DEAL" 
                        Command="{Binding DealCommand}" 
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                        BackgroundColor="#b30000" TextColor="White" HeightRequest="65" CornerRadius="32" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Row="2">
                <Border Stroke="#FFD700" StrokeThickness="4">
                    <Image Source="{Binding PlayerImage}" Aspect="AspectFit" HeightRequest="185" />
                </Border>

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="15">
                    <Label Text="YOU" TextColor="White" FontSize="20" FontAttributes="Bold" />
                    <Label Text="{Binding PlayerScore}" TextColor="#FFD700" FontSize="20" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>
        
        <ContentView IsVisible="{Binding IsGameOver}" BackgroundColor="Black" Grid.RowSpan="3">
            <VerticalStackLayout VerticalOptions="Center" Spacing="30">
                <Label Text="{Binding StatusText}" TextColor="Gold" FontSize="36" HorizontalTextAlignment="Center" />
                <Button Text="NEW GAME" Command="{Binding RestartCommand}" BackgroundColor="White" TextColor="Black" />
            </VerticalStackLayout>
        </ContentView>
    </Grid>
</ContentPage>