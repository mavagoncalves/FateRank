<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FateRank.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">
            
            <Label Text="FATERANK: WAR" FontSize="32" HorizontalOptions="Center" FontAttributes="Bold" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="40">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="PlayerCountLabel" Text="Player: 26" HorizontalOptions="Center" />
                    <Image x:Name="PlayerCardImage" Source="dotnet_bot.png" HeightRequest="200" WidthRequest="150" />
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="10">
                    <Label x:Name="ComputerCountLabel" Text="CPU: 26" HorizontalOptions="Center" />
                    <Image x:Name="ComputerCardImage" Source="dotnet_bot.png" HeightRequest="200" WidthRequest="150" />
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <Label x:Name="StatusLabel" Text="Press Play to Start!" FontSize="20" HorizontalOptions="Center" TextColor="Gray" />

            <Button x:Name="PlayBtn" Text="PLAY ROUND" Clicked="OnPlayClicked" HorizontalOptions="Center" WidthRequest="200" BackgroundColor="Purple" />
            
            <Button x:Name="RestartBtn" Text="RESTART" Clicked="OnRestartClicked" HorizontalOptions="Center" IsVisible="False" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>